{
    "version": "0.2.0",
    // "envFile": "${workspaceFolder}/.env",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug script with args",
            "type": "python",
            "request": "launch",
            "module": "DebuggerTest.script_with_args",
            "args": [
                "${input:a}",
                "3",
            ],
            "env": {
                "MY_ENV_VAR": "my env var value"
            }
        }
    ]
}